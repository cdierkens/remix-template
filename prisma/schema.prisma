generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("BOS_DATABASE_URL")
  shadowDatabaseUrl = env("BOS_SHADOW_DATABASE_URL")
}

model User {
  id    String  @id @default(uuid()) @db.Uuid
  email String  @unique
  name  String?
}

model Event {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  // TODO: Make this work (it threw an error)
  // updatedAt DateTime @updatedAt

  slug String    @unique
  name String
  date DateTime?

  MovieViews MovieView[]
}

model Movie {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  MovieViews MovieView[]

  // TODO: Store data from themoviedb instead of fetching
  //   backdrop_path?: string;
  //   genres?: Array<Genre>;
  //   homepage?: string;
  //   imdb_id?: string;
  //   overview?: string;
  //   poster_path?: string;
  //   release_date?: string;
  //   runtime?: number;
  //   tagline?: string;
  //   title?: string;
  //   video?: boolean;
  //   vote_average?: number;
  //   vote_count?: number;

  themoviedbId Int @unique
}

model MovieView {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  viewDateTime DateTime

  event   Event  @relation(fields: [eventId], references: [id])
  eventId String @db.Uuid

  movie   Movie  @relation(fields: [movieId], references: [id])
  movieId String @db.Uuid
}
